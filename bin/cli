#!/usr/bin/env python

username = input('user: ')
password = input('pass: ')

h = Human(username, password)

while True:

    # Wait until valid response
    response = input('a: ask\nr: respond\nq: quit\n>> ')
    while not (response in ['a', 'r', 'q']):
        print('Invalid input.')
        response = input('a: ask\nr: respond\nq: quit\n>> ')

    if response == 'a':
        text = input('question: ')
        regex = input('regex (optional): ')
        if regex == '':
            regex = regex_util.ANY
        h.ask(text, regex)

    elif response == 'r':
        query = h.get()
        print('question: {}'.format(query['text']))
        print('regex: {}'.format(query['regex']))
        response = input('response: ')
        h.respond(response, query)

    else:
        exit()
